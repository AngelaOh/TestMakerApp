<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:background="#0E1C36"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/app_header1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Test Maker | "
            android:textColor="#FAFFFD"
            android:textSize="40dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/slogan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="test making made easy"
            android:textColor="#FAFFFD"
            android:textSize="30dp" />


    </LinearLayout>

    <View
        android:id="@+id/border"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_marginTop="20dp"
        android:background="#FA824C" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/regular_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FAFFFD"
            android:textSize="25dp"
            android:layout_marginTop="100dp"
            android:text="Regular LogIn Stuff"/>

        <TextView
            android:id="@+id/oauth_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:paddingLeft="30dp"
            android:text="OAuth Login Goes Here: "
            android:textColor="#FAFFFD"
            android:textSize="25dp" />

    </LinearLayout>

    <Button
        android:id="@+id/practice_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PRACTICE VIEW SWITCH"
        android:layout_marginTop="50dp" />


</LinearLayout>